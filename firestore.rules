rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function signedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return signedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "admin";
    }

    match /users/{uid} {
      allow read, write: if signedIn() && request.auth.uid == uid;
    }

    match /drivers/{uid} {
      allow read: if signedIn();
      allow write: if isAdmin() || (signedIn() && request.auth.uid == uid && !('status' in request.resource.data));
    }

    match /rides/{rideId} {
      allow create: if signedIn() && request.resource.data.clientId == request.auth.uid;
      allow read: if signedIn() && (
        resource.data.clientId == request.auth.uid ||
        resource.data.driverId == request.auth.uid ||
        isAdmin()
      );
      allow update: if isAdmin() || (signedIn() && resource.data.driverId == request.auth.uid);

      match /offers/{driverId} {
        allow read: if signedIn() && (request.auth.uid == driverId || isAdmin());
        allow write: if isAdmin();
      }
    }

    match /settings/pricing {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}

